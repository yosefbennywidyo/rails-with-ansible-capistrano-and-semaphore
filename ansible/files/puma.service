[Unit]
Description=app Puma Server
After=network.target

[Service]
Type=simple
User=deploy
Environment=RAILS_ENV=production
WorkingDirectory=/home/deploy/app/current/
ExecStart=/usr/local/bin/chruby-exec ruby-3.0.0 -- bundle exec puma -C /home/deploy/app/current/config/puma.rb
ExecStop=/usr/local/bin/chruby-exec ruby-3.0.0 -- bundle exec pumactl -F /home/deploy/app/current/config/puma.rb stop
ExecReload=/usr/local/bin/chruby-exec ruby-3.0.0 -- bundle exec pumactl -F /home/deploy/app/current/config/puma.rb phased-restart
TimeoutSec=15
Restart=always
KillMode=process

[Install]
WantedBy=multi-user.target